<% content_for :page_title do %>
  <%= link_to Spree.t(:badges), spree.admin_badges_url %> /
  <%= @badge.name %>
<% end %>
<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @badge } %>
<%= form_for [:admin, @badge] do |badge_form| %>
  <%= render partial: 'form', locals: { badge_form: badge_form } %>
  <%= render partial: 'spree/admin/shared/edit_resource_links' %>
<% end %>
